<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.qiang.android.chongai" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="me.qiang.android.chongai.GlobalApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.qiang.android.chongai.Activity.StateEdit"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.qiang.android.chongai.Activity.CustomAlbum"
            android:label="@string/title_activity_custom_album" >
        </activity>
        <activity
            android:name="me.qiang.android.chongai.Activity.ImagePager"
            android:label="@string/title_activity_image_pager" >
        </activity>
    </application>

</manifest>
